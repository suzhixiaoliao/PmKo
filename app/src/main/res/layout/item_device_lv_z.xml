<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_pumin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@mipmap/device_line" />
            <ImageView
                android:id="@+id/device_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/device_dot" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/device_dot"
                android:layout_gravity="center"
                android:background="@mipmap/device_line" />
        </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginRight="10dp"
    android:background="@mipmap/device_dialog">
    <TextView
        android:id="@+id/tv_device_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:padding="10px"
        android:layout_gravity="clip_vertical"
        android:layout_marginLeft="50px"
        android:text="时间"
        android:textSize="16sp" />

    <TextView
        android:padding="10px"
        android:layout_toRightOf="@+id/tv_device_time"
        android:id="@+id/tv_device_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical"
        android:text="地点"
        android:layout_marginLeft="50px"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_device_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备"
        android:layout_marginLeft="60px"
        android:layout_below="@+id/tv_device_time"
        android:textColor="@color/shenlan"
        android:textSize="30px" />
   </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/bt_tasklist_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/device_arrows" />

</RelativeLayout>
