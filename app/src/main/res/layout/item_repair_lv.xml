<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_pumin"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_repair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/device_dot"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/device_line" />

        <ImageView
            android:id="@+id/repair_dot"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/green_pm" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/repair_dot"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/device_line" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@mipmap/device_dialog">
        <TextView
            android:id="@+id/tv_repair_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_marginLeft="20dp"
            android:padding="5dp"
            android:text="时间"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_repair_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/tv_repair_device"
            android:padding="5dp"
            android:text="手机"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_repair_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_repair_time"
            android:layout_marginLeft="30dp"
            android:text="设备"
            android:padding="5dp"
            android:textColor="@color/shenlan"
            android:textSize="14dp" />
        <TextView
            android:layout_toRightOf="@+id/tv_repair_device"
            android:layout_below="@+id/tv_repair_phone"
            android:id="@+id/tv_repair_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="clip_vertical"
            android:layout_marginLeft="30dp"
            android:padding="5dp"
            android:textColor="@color/shenlan"
            android:textSize="14dp"
            android:text="地点" />

        <ImageView
            android:id="@+id/bt_tasklist_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:background="@mipmap/device_arrows" />
    </RelativeLayout>
</LinearLayout>

