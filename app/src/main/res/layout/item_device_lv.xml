<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_pumin"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="22px"
            android:id="@+id/tv_tasklist_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="时间"
            android:textSize="18sp" />

        <TextView
            android:paddingLeft="22px"
            android:id="@+id/tv_tasklist_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_above="@+id/tv_tasklist_device"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/button"
            android:text="地点"
            android:textSize="18sp" />
        <ImageView
            android:layout_weight="1"
            android:id="@+id/bt_tasklist_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/main_arrows" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tasklist_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:text="设备"
        android:drawablePadding="11px"
        android:paddingLeft="22px"
        android:textColor="@color/shenlan"
        android:textSize="30px" />
    </LinearLayout>

</RelativeLayout>
