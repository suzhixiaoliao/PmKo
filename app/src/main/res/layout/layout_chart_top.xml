<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <RelativeLayout
        android:layout_toRightOf="@+id/yy"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">
    <TextView
        android:id="@+id/tv_date_start"
        android:hint="2016-06-01"
        android:textSize="20dp"
        android:background="@mipmap/value_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ww"
            android:layout_toRightOf="@+id/tv_date_start"
            android:layout_width="20dp"
            android:background="@mipmap/titile_pumin"
            android:gravity="center"
            android:layout_height="1dp" />
    <TextView
        android:layout_toRightOf="@+id/ww"
        android:background="@mipmap/value_date"
        android:id="@+id/tv_date_end"
        android:hint="2016-06-04"
        android:textSize="20dp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/yy"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/et_yunxing"
            android:background="@mipmap/value_device"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>

</LinearLayout>
