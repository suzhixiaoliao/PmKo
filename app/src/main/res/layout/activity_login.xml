<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        android:alpha="0.7">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@mipmap/login_xbg"
            android:layout_marginTop="51dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="340dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/user"
                android:layout_alignBottom="@+id/view" />
            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/iv"
                android:background="@color/divider"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/view"
            android:background="@android:color/transparent"
            android:text="13000000000"
            android:inputType="text"
            android:textColor="@color/divider"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_iv"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@mipmap/pwd"
                android:layout_alignTop="@+id/view_view" />
            <View
                android:id="@+id/view_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/iv_iv"
                android:background="@color/divider"/>
            <EditText
                android:id="@+id/et_psd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:text="pumintech"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/divider"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/view_view"
                android:layout_toEndOf="@+id/view_view" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="30dp"
    android:layout_below="@+id/login_layout">
    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/login"
        android:paddingBottom="10dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="40dp" />
</LinearLayout>

</RelativeLayout>