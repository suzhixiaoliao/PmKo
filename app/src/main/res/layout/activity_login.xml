<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_pumin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_login_x"
        android:layout_width="200dp"
        android:layout_height="150dp"
       android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/pumin_loginxx">
    </ImageView>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_login_x"
        android:id="@+id/login_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:gravity="center"
            android:orientation="vertical">
            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/login_user1"
                android:drawablePadding="11px"
                android:paddingLeft="22px"
                android:background="@mipmap/login_huise"
                android:layout_marginBottom="11px"
                android:hint="User name" />

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="11px"
                android:paddingLeft="22px"
                android:background="@mipmap/login_huise"
                android:drawableLeft="@mipmap/login_psd1"
                android:hint="Password" />
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <com.intentpumin.lsy.intentpumin.cb.CheckBox
                android:id="@+id/cb_pwd"
                android:layout_alignParentLeft="true"
                style="@style/carbon_CheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"/>
            <com.intentpumin.lsy.intentpumin.cb.CheckBox
                android:layout_alignParentRight="true"
                style="@style/carbon_CheckBox"
                android:id="@+id/cb_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_cb"
            android:layout_alignParentRight="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/login_layout">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:layout_height="wrap_content">

            </RelativeLayout>
            <Button
                android:id="@+id/tv_login_x"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_layout"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@mipmap/login_btn4"
                android:text="登   录"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_below="@+id/login_layout"
    android:padding="10dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="22px"
        android:textColor="@color/black"
        android:text="忘记密码？ "/>
</RelativeLayout>

</RelativeLayout>
