<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidMissingOnClickHandler -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_pumin"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@mipmap/titile_pumin">
        <!--suppress AndroidMissingOnClickHandler, AndroidMissingOnClickHandler -->
       <Button
           android:id="@+id/btn_back"
           android:layout_width="20dp"
           android:layout_margin="20dp"
          android:layout_marginTop="20dp"
           android:layout_height="20dp"
           android:background="@mipmap/back_pumin"/>
        <TextView
            android:id="@+id/tv_main"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="任务清单"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="44dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>

