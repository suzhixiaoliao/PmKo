<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/zhu_btl"
        android:layout_weight="1"
        >
        <include
            android:id="@+id/list_zxing_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/layout_list_zxing_title" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/zhu_btl"
        android:layout_weight="3"
        >
        <GridView
            android:id="@+id/gv_task"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/zhu_btl"
        android:layout_weight="3"
        >
        <ListView
            android:id="@+id/gv_shuju"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@mipmap/zhu_btl"
        android:layout_weight="2"
        >

        <View
            android:id="@+id/view_fengeixi"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_centerInParent="true"
            android:background="@color/white"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/tv_queding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="确定"
            android:textSize="20dp"
            android:layout_toLeftOf="@+id/view_fengeixi"
            />
        <TextView
            android:id="@+id/tv_fanhui"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/view_fengeixi"
            />


    </RelativeLayout>

</LinearLayout>
