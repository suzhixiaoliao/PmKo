<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e0dc"
    android:orientation="vertical"
    tools:context="com.pumin.fragment.Futuremission_fragment">

    <ImageView
        android:id="@+id/image_false"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#e1e0dc"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@mipmap/futur" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="未来任务记录"
                android:textSize="20dp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#000" />

        <ListView
            android:id="@+id/future_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e1e0dc"
            android:dividerHeight="5dp"
            android:listSelector="@drawable/list_item_bg" />
    </LinearLayout>
</RelativeLayout>
